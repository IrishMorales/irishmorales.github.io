{
  "scripts": {
    "jekyll-watch": "bundle exec jekyll serve --livereload",
    "tailwind-watch": "postcss ./assets/css/index.css -o ./assets/css/compiled.css --watch",
    "dev": "cross-env NODE_ENV=development npm-run-all --parallel tailwind-watch jekyll-watch",
    "jekyll-prod": "JEKYLL_ENV=production bundle exec jekyll build",
    "tailwind-prod": "postcss ./assets/css/index.css -o ./assets/css/compiled.css",
    "prod": "cross-env NODE_ENV=production npm-run-all tailwind-prod jekyll-prod",
    "start": "npm run dev"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.20",
    "cross-env": "^7.0.3",
    "cssnano": "^7.0.6",
    "daisyui": "^4.12.14",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.49",
    "postcss-cli": "^11.0.0",
    "postcss-import": "^16.1.0",
    "tailwindcss": "^3.4.13"
  },
  "engines": {
    "npm": ">=9.2.0",
    "node": "18.19.0"
  }
}
